@model IEnumerable<Forma1.Data.Models.Team>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfFoundation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfWonWorldChampionship)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaidEntryFee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfFoundation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWonWorldChampionship)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaidEntryFee)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
